<!DOCTYPE html>
<html lang="sv">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/assets/templates.css">
</head>
<body>
  <header>
    <h1><%= title %></h1>
    <a href="/" class="back-link">Tillbaka till spelet</a>
  </header>

  <main>
    <div class="filters">
      <form id="filter-form" action="/highscores" method="get">
        <label for="letters">Filtrera efter längd:</label>
        <select id="letters" name="letters">
          <option value="">Alla</option>
          <% filterOptions.lengths.forEach(len => { %>
            <option value="<%= len %>" <%= currentFilters.letters == len ? 'selected' : '' %>><%= len %></option>
          <% }) %>
        </select>
      
        <label for="duplicates">Dubbletter:</label>
        <select id="duplicates" name="duplicates">
          <option value="">Alla</option>
          <option value="false" <%= currentFilters.duplicates === 'false' ? 'selected' : '' %>>Utan dubbletter</option>
          <option value="true" <%= currentFilters.duplicates === 'true' ? 'selected' : '' %>>Med dubbletter</option>          
       </select>
      
        <button type="submit">Filtrera</button>
        <% if (currentFilters.letters || currentFilters.duplicates !== null) { %>
          <button type="button" class="clear-filters" onclick="window.location.href='/highscores'">
            Rensa filter
          </button>
        <% } %>
      </form>
    </div>

    <% if (highscores.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Plats</th>
            <th>Namn</th>
            <th>Tid</th>
            <th>Gissningar</th>
            <th>Ordlängd</th>
            <th>Dubbletter</th>
          </tr>
        </thead>
        <tbody id="highscore-table-body">
          <% highscores.forEach((highscore, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= highscore.name %></td>
              <td><%= highscore.timeFormatted %></td>
              <td><%= highscore.guesses %></td>
              <td><%= highscore.letters %></td>
              <td><%= highscore.duplicates ? 'Ja' : 'Nej' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      
    <% } else { %>
      <p>Inga highscores hittades för de valda filtren.</p>
    <% } %>
  </main>

  <footer>
    <p>&copy; <%= new Date().getFullYear() %> Wordle-like Game</p>
  </footer>
</body>
</html>