{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES6",
    "outDir": "./dist",
    //"rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,               // Gör det enklare att importera moduler
    "moduleResolution": "node",            // Node.js-modulupplösning
    "skipLibCheck": true                   // Hoppa över typkontroller av bibliotek
  },
  "include": ["src/**/*", "tests/**/*"], // testmapp
  "exclude": ["node_modules"]              // Exkludera `node_modules`
}
